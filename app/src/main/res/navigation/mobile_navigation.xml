<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.prilepskiy.moviemessager.ui.fragment.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_moviDetailFragment"
            app:destination="@id/moviDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.prilepskiy.moviemessager.ui.fragment.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_moviDetailFragment"
            app:destination="@id/moviDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_message"
        android:name="com.prilepskiy.moviemessager.ui.fragment.message.MessageFragment"
        android:label="@string/title_message"
        tools:layout="@layout/fragment_message" >
        <argument
            android:name="user"
            app:argType="com.prilepskiy.moviemessager.domain.model.UserModel" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.prilepskiy.moviemessager.ui.fragment.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/userListFragment"
        android:name="com.prilepskiy.moviemessager.ui.fragment.userlist.UserListFragment"
        android:label="fragment_user_list"
        tools:layout="@layout/fragment_user_list" >
        <action
            android:id="@+id/action_userListFragment_to_navigation_message"
            app:destination="@id/navigation_message" />
    </fragment>
    <fragment
        android:id="@+id/moviDetailFragment"
        android:name="com.prilepskiy.moviemessager.ui.fragment.moviDetail.MoviDetailFragment"
        android:label="fragment_movi_detail"
        tools:layout="@layout/fragment_movi_detail" >
        <argument
            android:name="movie"
            app:argType="com.prilepskiy.moviemessager.domain.model.MovieUImodel$MovieModel" />
    </fragment>


</navigation>